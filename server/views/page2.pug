doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= Routing

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    include header.pug
    h1 HELLO Page2
    br 
    main#routering(role="main" class="container" style="position: center;")
      h1#pageTitle ADD CUSTOMER
      form#add(action="/" method="POST")
        .form-group
          label Name
          input.form-control#name(type="text"
            name="name" v-model="name")
        .form-group
          label Address
          input.form-control#address(type="text"
            name="address" v-model="address")
        .form-group
          label Contact No.
          input.form-control#contactNo(type="text"
            name="contactNo" v-model="contactNo")
        .form-group
          button.btn.btn-primary(type="button"
            v-on:click="addCustomer") Add Customer
          button.btn#clearBtn(type="button"
            v-on:click="clear") Clear
      section
        table.table#notesTable
          tr
            th Name
            th Address
            th Contact No.
            th Actions
          tr(v-for="note in notes")
            td {{ note.named }}
            td {{ note.address }}
            td {{ note.ContactNo }}
            td
              button(v-on:click="deleteNote(note)") Delete

  script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
  script(src="/routering-vue.js")